@model IList<TestApplication1.Controllers.HomeController.SelectableProduct>

@{
    ViewBag.Title = "check_List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>
                Price
            </th>
            <th></th>
        </tr>


        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => Model[i].Price)
                    @Html.EditorFor(m => Model[i].Price)

                </td>
                <td>
                    @Html.HiddenFor(m => Model[i].ProductId)
                    @Html.CheckBoxFor(m => Model[i].IsSelected)

                </td>
            </tr>
        }
    </table>
    <input type="submit" />
}

