@model TestApplication1.Controllers.Home2Controller.CountryModel

@{
    ViewBag.Title = "GetCountry_Index";
}

<h2>GetCountry_Index</h2>

<hr />
@using (Html.BeginForm("GetCountry", "Home2"))
{
    <label>Country:</label>
    @Html.DropDownListFor(m => m.SelectedCountryId, new SelectList(Model.CountryList, "CountryName", "CountryName"), new { @multiple = "multiple", @placeholder = "Please select country", @class = "ddlMultiSlectBox" })
    <input type="submit" value="submit" />
}
@section scripts{
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="https://hemantnegi.github.io/jquery.sumoselect/javascripts/jquery.sumoselect.js"></script>
    <link href="https://hemantnegi.github.io/jquery.sumoselect/stylesheets/sumoselect.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $('.ddlMultiSlectBox').SumoSelect({
                placeholder: 'This is a placeholder',
                csvDispCount: 5
            });
        });
    </script>
}