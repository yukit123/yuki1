
@{
    ViewBag.Title = "LoadingIcon";
    Layout = null;
}

<style>
    #pageloaddiv {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 1000;
        background: url('//i.stack.imgur.com/FhHRx.gif') no-repeat center center;
    }
</style>
<div id="pageloaddiv">
</div>
<table id="myTable"></table>
<script type="text/javascript" src="http://code.jquery.com/jquery-1.8.2.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: '/Home2/LoadingIcon_GetCurrentTime',
            success: function (msg) {
                if (msg.flag == 1) {
                    $('#pageloaddiv').hide();
                    alert("load successfully");
                    var row="";
                    $.each(msg.list, function (i, v) {
                        row += "<tr><td>" + v.Id + "</td><td>" + v.size +"</td></tr>";
                    });

                    $("#myTable").append(row);
                }
                else {
                    $('#pageloaddiv').show();   
                    alert("load faild");
                }
            }
        })
    })
</script>
