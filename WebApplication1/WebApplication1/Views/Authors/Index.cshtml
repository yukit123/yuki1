                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        $('#myModalContent2').html(data);
                        $('#myModal').modal('show');


                        $('#myModalContent').html(data);//Html() load() replaceWith():https://forums.asp.net/t/2151801.aspx

