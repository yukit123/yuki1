@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        #AddFruitCount {
            position: fixed;
            top: 80px;
            right: 30px;
            z-index: 99;
            display: none;
            background-color: burlywood;
            border-radius: 10px;
            padding: 30px;
        }
    </style>
</head>
<body>
    <div id="AddFruitCount">
        <div id="Show">
        </div>
        <button id="Save" title="Save">Save</button>
    </div>
    <div style="background-color:black;color:white;padding:30px">Fruit</div>
    <div style="background-color:lightgrey;padding:30px 30px 2500px">
        <input type="checkbox" name="Fruit" value="Apple" />Apple
        <input type="checkbox" name="Fruit" value="Banana" />Banana
        <input type="checkbox" name="Fruit" value="Orange" />Orange
        <input type="checkbox" name="Fruit" value="Pineapple" />Pineapple
        <hr />
        <div id="showDetails"></div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        window.scroll(function () {
            $('#AddFruitCount').css('top', $(this).scrollTop());
        });
        $("body").on("change", "input[type='checkbox']", function () {

            if ($(this).is(':checked')) {
                if ($("#AddFruitCount").css("display") == "none") {
                    $("#AddFruitCount").css("display", "block");
                }
                $("#Show").append("<p><b>" + $(this).val() + ": </b><input id='" + $(this).val() + "'></input><button class='remove'>remove</button></p>")
            }
            else {
                $("#Show").find("p").has("input[id='" + $(this).val() + "']").remove();
                if ($("#Show").find("p").length <= 0) {
                    $("#AddFruitCount").css("display", "none");
                }
            }
        })
        $("body").on("click", "#Save", function () {
            $("#showDetails").html("");
            $("p").each(function () {
                var a = $(this).children().first().html();
                var b = $(this).children().last().val();
                $("#showDetails").append("<p><b>" + a + "</b> <span>" + b + "</span></p>");
            })
            $("#AddFruitCount").css("display", "none");
            $("#Show").html(" ");
        })
        $("body").on("click", "button[class='remove']", function () {
            $(this).parent().remove();
            if ($("#Show").find("p").length <= 0) {
                $("#AddFruitCount").css("display", "none");
            }
        })
    </script>
</body>
</html>