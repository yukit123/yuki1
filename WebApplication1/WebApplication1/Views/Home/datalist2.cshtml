    <script>
        $(function () {
            $.ajax({
                url: '/Home/GetData2',
                type: 'GET',
                //async: false,
                data: { id: $("#OSRddl").val() },
                success: function (data) {
                    for (var i = 0; i < data.showlist.length; i++) {
                        $("#getdatalist").append("<option label='" + data.showlist[i].CityName + "'Value='" + data.showlist[i].CityName + "'></option>");
                    }
                }
            })
        });


        $('body').on("change", "#OSRddl", function () {
            $.ajax({
                url: '/Home/GetData2',
                type: 'GET',
                //async: false,
                data: { id: $("#OSRddl").val() },
                success: function (data) {
                    $("#getdatalist").empty();
                    for (var i = 0; i < data.showlist.length; i++) {
                        $("#getdatalist").append("<option label='" + data.showlist[i].CityName + "'Value='" + data.showlist[i].CityName + "'></option>");

                    }

                }
            })
        });
    </script>
